@model IEnumerable<PrintingOrder.Models.Machine>

@{
    ViewData["Title"] = "الآلات";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">قائمة الآلات</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> إضافة آلة جديدة
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>اسم الآلة</th>
                    <th>الحالة</th>
                    <th>ملاحظات</th>
                  
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Status</td>
                        <td>@item.Notes</td>
                       
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1">
                                <i class="bi bi-pencil-square"></i> تعديل
                            </a>
                           
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
