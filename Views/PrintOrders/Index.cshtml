@model PaginatedList<PrintingOrder.ViewModels.PrintOrderIndexVM>
@using PrintingOrder.Helper



<h2 class="mb-4">📑 أوامر التشغيل</h2>
<div class="d-flex justify-content-start mb-3" style="align-content:flex-end">
    <a asp-action="Create" class="btn btn-success me-2">➕ إضافة أمر تشغيل تجاري</a>
    <a asp-action="CreateSchool" class="btn btn-primary me-2">➕ إضافة أمر طباعة كتاب مدرسي</a>
    <a asp-action="ExportToExcel"
       asp-route-printType="@Context.Request.Query["printType"]"
       asp-route-customerId="@Context.Request.Query["customerId"]"
       asp-route-printSizeId="@Context.Request.Query["printSizeId"]"
       asp-route-delegateId="@Context.Request.Query["delegateId"]"
       asp-route-level="@Context.Request.Query["level"]"
       asp-route-printName="@Context.Request.Query["printName"]"
       asp-route-orderNumber="@Context.Request.Query["orderNumber"]"
       asp-route-fromDate="@Context.Request.Query["fromDate"]"
       asp-route-toDate="@Context.Request.Query["toDate"]"
       class="btn btn-outline-success me-2">
        ⬇️ تصدير إلى Excel
    </a>
</div>

<div class="card mb-4">
    <div class="card-header">خيارات البحث والفلترة</div>
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">نوع المطبوعة</label>
                <select name="printType" class="form-control">
                    <option value="">الكل</option>
                    <option value="School">مدرسي</option>
                    <option value="Commercial">تجاري</option>
                </select>         
            </div>

            <div class="col-md-2">
                <label class="form-label">العائدية</label>
                <select name="customerId" asp-items="ViewBag.Customers" class="form-control">
                    <option value="">الكل</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">القياس</label>
                <select name="printSizeId" asp-items="ViewBag.PrintSizes" class="form-control">
                    <option value="">الكل</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">المندوب</label>
                <select name="delegateId" asp-items="ViewBag.Delegates" class="form-control">
                    <option value="">الكل</option>
                </select>
            </div>

            <div class="col-md-3">
                <label>مرحلة أمر التشغيل</label>
                <select name="level" asp-items="ViewBag.Statuses" class="form-control">
                    <option value="">-- اختر حالة --</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">اسم المطبوعة</label>
                <input type="text" name="printName" class="form-control" placeholder="ابحث بالاسم..." />
            </div>

            <div class="col-md-2">
                <label class="form-label">رقم الأمر</label>
                <input type="text" name="orderNumber" class="form-control" placeholder="ابحث بالرقم..." />
            </div>

            <div class="col-md-2">
                <label class="form-label">من تاريخ</label>
                <input type="date" name="fromDate" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label">إلى تاريخ</label>
                <input type="date" name="toDate" class="form-control" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">🔍 بحث</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">قائمة أوامر التشغيل</div>
    <div class="card-body">

        


        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>رقم الأمر</th>
                    <th>التاريخ</th>
                    <th>اسم المطبوعة</th>
                    <th>نوع المطبوعة</th>
                    <th>العائدية</th>
                    <th>القياس</th>
                    <th>المندوب</th>
                    <th>المرحلة</th>
                    <th> الكبسات المطلوبة</th>
                    <th> الكبسات المنجزة</th>
                    <th>الكبسات المتبقية</th>
                    <th> النسخ المجلدة</th>
                    <th>الملسلمة للمستودع</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.OrderByDescending(o => o.Date)) // الأحدث أولاً
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.Date.ToString("yyyy-MM-dd")</td>
                        <td>@order.PrintName</td>
                        <td>@(order.PrintType == PrintOrderType.School ? "مدرسي" : "تجاري")</td>
                        <td>@order.CustomerName</td>
                        <td>@order.PrintSizeName  </td>
                        <td>@order.DelegateName</td>
                        <td>
                           @order.Levels.GetDisplayName()
                        </td>
                        <td>
                            @order.TotalPressRuns.ToSeparated()
                        </td>
                        <td>
                            @order.CompletedPressRuns.ToSeparated()
                        </td>
                        <td>
                            @order.RemainingPressRuns.ToSeparated()
                        </td>
                        <td>
                            @order.FoldedCopies.ToSeparated()
                        </td>
                        <td>
                            @order.DeliveriedCopiesToStore.ToSeparated()
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">عرض</a>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                صفحة @Model.PageIndex من @Model.TotalPages
            </div>
            <div>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-printType="@Context.Request.Query["printType"]"
                           asp-route-clientId="@Context.Request.Query["customerId"]"
                           asp-route-printSizeId="@Context.Request.Query["printSizeId"]"
                           asp-route-representativeId="@Context.Request.Query["delegateId"]"
                           asp-route-status="@Context.Request.Query["level"]"
                           asp-route-printName="@Context.Request.Query["printName"]"
                           asp-route-orderNumber="@Context.Request.Query["orderNumber"]"
                           asp-route-fromDate="@Context.Request.Query["fromDate"]"
                           asp-route-toDate="@Context.Request.Query["toDate"]">السابق</a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-printType="@Context.Request.Query["printType"]"
                               asp-route-clientId="@Context.Request.Query["customerId"]"
                               asp-route-printSizeId="@Context.Request.Query["printSizeId"]"
                               asp-route-representativeId="@Context.Request.Query["delegateId"]"
                               asp-route-status="@Context.Request.Query["level"]"
                               asp-route-printName="@Context.Request.Query["printName"]"
                               asp-route-orderNumber="@Context.Request.Query["orderNumber"]"
                               asp-route-fromDate="@Context.Request.Query["fromDate"]"
                               asp-route-toDate="@Context.Request.Query["toDate"]">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-printType="@Context.Request.Query["printType"]"
                           asp-route-clientId="@Context.Request.Query["customerId"]"
                           asp-route-printSizeId="@Context.Request.Query["printSizeId"]"
                           asp-route-representativeId="@Context.Request.Query["delegateId"]"
                           asp-route-status="@Context.Request.Query["level"]"
                           asp-route-printName="@Context.Request.Query["printName"]"
                           asp-route-orderNumber="@Context.Request.Query["orderNumber"]"
                           asp-route-fromDate="@Context.Request.Query["fromDate"]"
                           asp-route-toDate="@Context.Request.Query["toDate"]">التالي</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
